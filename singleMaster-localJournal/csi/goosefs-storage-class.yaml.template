apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: goosefs
provisioner: goosefs
parameters:
  goosefsPath: /
  javaOptions: -Dgoosefs.user.metadata.cache.enabled=false -Dgoosefs.master.hostname=81.71.43.151
volumeBindingMode: Immediate
mountOptions:
  - "kernel_cache"
  - "allow_other"
  - "entry_timeout=36000"
  - "attr_timeout=36000"
  - "max_readahead=0"
